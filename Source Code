import re


# -------- Text Preprocessing -------- #

def preprocess(text):
    text = text.lower()
    text = re.sub(r"[^\w\s]", "", text)
    return text


# -------- Chatbot Rules -------- #

responses = {
    "hello": "Hello! How can I help you today?",
    "hi": "Hi there! How can I assist you?",
    "courses": "Tamizhan Skills offers Python, Data Science, Web Development, AI courses and many more courses are available please visit our website and check .",
    "python": "Python is one of our most popular courses for beginners , not only we have course , we provide internship with certification .",
    "duration": "Most courses range from 4 to 8 weeks depending on the level.",
    "fees": "Course fees vary. Please visit the official website for details.",
    "contact": "You can contact Tamizhan Skills via their official website or email support.",
    "bye": "Goodbye! Have a great day.",
    "thank": "You're welcome! Happy to help."
}


# -------- Chat Logic -------- #

def get_response(user_input):
    user_input = preprocess(user_input)

    for key in responses:
        if key in user_input:
            return responses[key]

    return "Sorry, I didn't understand that. Please ask about courses, fees, duration or Visit our website lo learn more about us ."


# -------- Main Program -------- #

def chatbot():
    print("ðŸ¤– Tamizhan Skills Chatbot")
    print("Type 'bye' to exit.\n")

    while True:
        user_input = input("You: ")

        response = get_response(user_input)
        print("Bot:", response)

        if "bye" in preprocess(user_input):
            break


if __name__ == "__main__":
    chatbot()
